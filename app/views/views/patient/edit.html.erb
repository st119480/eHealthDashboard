<h2>Edit Patient</h2>

<%= form_for (@patient) do |f| %>
  <div class="field">
    <%= f.label :first_name , "First Name" %><br />
    <%= f.text_field :first_name, autocomplete: "on" %>
  </div>

  <div class="field">
    <%= f.label :last_name, "Last Name" %><br />
    <%= f.text_field :last_name, autocomplete: "on" %>
  </div>

  <div class="field">
    <%= f.label :email, "Email" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :username, "Username" %><br />
    <%= f.text_field :username, autocomplete: "on" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :role_id, "Role" %>
    <%= f.select :role_id, options_for_select(Role.where('id = 3').map {|p| [ p.description, p.id ]}),:required => true  %>
  </div>


  <div class="field">
    <%= f.label :blood_type_id, "Blood Type" %>
    <%= f.select :blood_type_id, options_for_select(BloodType.all.map {|p| [ p.blood_group_rh_type, p.id ]}, "Please Select"),:prompt => "Please Select",:required => true  %>
  </div>

  <div class="field">
    <%= f.label :gender, "Gender" %>
    <%= f.select :gender, ['Please Select', 'Male', 'Female', 'Others'],
                 :selected => 'Select One' %>
  </div>

  <div class="field">
    <%= f.label :Date_of_Birth, "Date Of Birth" %><br />
    <%= f.date_field :dob %>
  </div>

  <div class="field">
    <%= f.label :contact, "Contact Number" %><br />
    <%= f.text_field :contact, autocomplete: "on" %>
  </div>

  <div class="field">
    <%= f.label :province, "Province" %><br />
    <%= f.text_field :province, autocomplete: "on" %>
  </div>

  <div class="field">
    <%= f.label :city_village, "City or Village" %><br />
    <%= f.text_field :city_village, autocomplete: "on" %>
  </div>

  <div class="field">
    <%= f.label :address_line_1, "Address Line 1" %><br />
    <%= f.text_field :address_line_1, autocomplete: "on" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>


<%= link_to "Back", :back %>
