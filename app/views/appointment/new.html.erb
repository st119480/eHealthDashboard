<%= form_for @appointment, url: {action: "create"} do |f| %>

  <div class="field">
    <%= f.label :doctor_id, "Doctor" %>
    <%= f.select :doctor_id, options_for_select(User.where('actable_type = \'Doctor\' ').map {|p| [ p.first_name + ' ' + p.last_name, p.actable_id ]}),:required => true  %>
  </div>

  <div class="field">
    <%= f.label :appointment_date, "Appointment Date" %><br />
    <%= f.date_select :appointment_date %>
  </div>
  <%= f.submit "Assign" , class: "btn btn-success"%>

<% end %>