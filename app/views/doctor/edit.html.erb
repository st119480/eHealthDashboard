<h2>Edit Doctor</h2>

<%= form_for (@doctor) do |f| %>
  <div class="field">
    <%= f.label :first_name , "First Name" %><br />
    <%= f.text_field :first_name, autocomplete: true %>
  </div>

  <div class="field">
    <%= f.label :last_name, "Last Name" %><br />
    <%= f.text_field :last_name, autocomplete: "on" %>
  </div>

  <div class="field">
    <%= f.label :email, "Email" %><br />
    <%= f.email_field :email, autofocus: "on" %>
  </div>

  <div class="field">
    <%= f.label :username, "Username" %><br />
    <%= f.text_field :username, autocomplete: "on" %>
  </div>

  <div class="field">
    <%= f.label :license_num, "License Number" %><br />
    <%= f.text_field :license_num, autocomplete: "on" %>
  </div>

  <div class="field">
    <%= f.label :qualification, "Qualification" %><br />
    <%= f.text_field :qualification, autocomplete: "on" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :role_id, "Role" %>
    <%= f.select :role_id, options_for_select(Role.where('id = 2').map {|p| [ p.description, p.id ]}),:required => true  %>
  </div>

  <div class="field">
    <%= f.label :specialty_id, "Specialty" %>
    <%= f.select :specialty_id, options_for_select(Specialty.all.map {|p| [ p.description, p.id ]}, "Please Select"),:prompt => "Please Select",:required => true  %>
  </div>


  <div class="field">
    <%= f.label :gender, "Gender" %>
    <%= f.select :gender, ['Please Select', 'Male', 'Female', 'Others'],
                 :selected => 'Select One' %>
  </div>

  <div class="field">
    <%= f.label :Date_of_Birth, "Date Of Birth" %><br />
    <%= f.date_field :dob %>
  </div>

  <div class="field">
    <%= f.label :contact, "Contact Number" %><br />
    <%= f.text_field :contact, autocomplete: "on" %>
  </div>


  <div class="field">
    <%= f.label :province_id ,"Province"%><br />
    <%= f.collection_select :province_id, Province.order(:name), :id, :name, include_blank: true%>
  </div>

  <div class="field">
    <%= f.label :district_id, "District" %><br />
    <%= f.grouped_collection_select :district_id, Province.order(:name), :districts, :name, :id, :district_name, include_blank: true %>
  </div>


  <div class="field">
    <%= f.label :address_line_1, "Address Line 1" %><br />
    <%= f.text_field :address_line_1, autocomplete: "on" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>


<%= link_to "Back", :back %>
