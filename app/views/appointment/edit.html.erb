<h1 style="text-align:center">Edit Appointment</h1>
<div class="container">
  <div class="border-dark card">
    <div style="height: 170px;">
      <%= form_for ([@patient, @appointment]) do |f| %>
        <div class="container">
          <br><div class="form-group col-md-4">
            <%= f.label :doctor_id, "Doctor" %>
            <%= f.select :doctor_id, options_for_select(User.where('actable_type = \'Doctor\' ').map {|p| [p.first_name + ' ' + p.last_name, p.actable_id]}.sort), :required => true, class:"form-contol" %>
          </div>

          <div class="form-group col-md-4">
            <%= f.label :appointment_date, "Appointment Date" %>
            <%= f.date_field :appointment_date, min: Date.today, class:"form-contol" %>
          </div>

          <%= f.submit "Update", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<br><div class="row">
  <div class="col-md-2"></div>
  <div class="col-xl-4">
    <%= link_to "Back", :back, class:"btn btn-outline-success" %>
  </div>
</div>