<body>




<% if flash[:error] %>
  <div id="error">
    <%= flash[:error] %>
  </div>
<% end %>
<div id="container">
  <div id="user_status">
    <% if user_signed_in? %>
      <h3 class="text-primary"> Welcome <b><%= current_user.username %></b></h3>
      <%= link_to 'My Profile', user_path(current_user.id) %>
      <%= link_to 'Edit Profile', edit_user_registration_path %>
      <% if current_user.role_id == 1 %>
        <%= link_to 'All Users', user_index_path %>
        <%= link_to 'Add Admin', new_admin_path %>
        <%= link_to 'All Admins', admin_index_path %>
        <%= link_to 'Add Patient', new_patient_path %>
        <%= link_to 'All Patients', patient_index_path %>
        <%= link_to 'Add Doctor', new_doctor_path %>
        <%= link_to 'All Doctors', doctor_index_path %>
      <% end %>
    <% else %>
      <!--%= link_to "Register", new_user_registration_path %-->

    <% end %>
  </div>
</div>

<div>
</div>
<main role="main">

  <div class="container-fluid">
    <% if flash[:error].present? %>
      <p class='alert alert-danger'><%= flash[:error] %></p>
    <% end %>
    <% if flash[:notice].present? %>
      <p class='alert alert-warning'><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert].present? %>
      <p class='alert alert-danger'><%= flash[:alert] %></p>
    <% end %>
    <%= yield %>
  </div>

</main>

