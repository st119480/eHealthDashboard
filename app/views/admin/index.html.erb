<h2>List of All Admins</h2>

<table>
  <thead>
  <tr>
    <th><%= sortable "first_name", "First Name" %></th>
    <th><%= sortable "last_name", "Last Name" %></th>
    <th><%= sortable "username", "Username" %></th>
    <th><%= sortable "email", "Email ID" %></th>
  </tr>
  </thead>

  <tbody>
  <% @admins.each do |admin| %>
    <tr>
      <td><%= admin.first_name %></td>
      <td><%= admin.last_name %></td>
      <td><%= link_to admin.username , admin_path(admin) %></td>
      <td><%= admin.email %></td>
      <% if current_user.username != admin.username %>
      <td><%= link_to 'Edit', edit_admin_path(admin), class:"btn btn-secondary" %></td>
      <td><%= link_to 'Delete', admin, method: :delete, data: {confirm: 'Are you sure?'}, class:"btn btn-success" %></td>
        <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>