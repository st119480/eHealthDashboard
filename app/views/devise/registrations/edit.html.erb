<h1 style="text-align:center">Edit <%= resource_name.to_s.humanize %></h1>
<div class="container">
  <div class="border-dark card">
    <div style="height: 640px;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

      <div class="container"><br>
        <div class="form-row">
          <div class="form-group col-md-4">
            <%= f.label :first_name , "First Name" %><br />
            <%= f.text_field :first_name, autocomplete: "on", class:"form-control" %>
          </div>

          <div class="col-md-2"></div>

          <div class="form-group col-md-4">
            <%= f.label :last_name, "Last Name" %><br />
            <%= f.text_field :last_name, autocomplete: "on", class:"form-control"  %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-4">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"  %>
          </div>

          <div class="col-md-2"></div>

          <div class="form-group col-md-4">
            <%= f.label :current_password %><br />
            <%= f.password_field :current_password, autocomplete: "off", placeholder:"old password", :style =>"font-style:italic", class:"form-control"  %>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-row">
          <div class="form-group col-md-4">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", placeholder:"new password", :style =>"font-style:italic", class:"form-control" %>
            <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="col-md-2"></div>

          <div class="form-group col-md-4">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-4">
            <%= f.label :gender, "Gender" %>
            <%= f.select :gender, ['Please Select', 'Male', 'Female', 'Others'],
                 :selected => 'Select One', class:"form-control" %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-4">
           <%= f.label :Date_of_Birth, "Date Of Birth" %><br />
           <%= f.date_field :dob, class:"form-control" %>
          </div>

          <div class="col-md-2"></div>

          <div class="form-group col-md-4">
    <%= f.label :contact, "Contact Number" %><br />
    <%= f.text_field :contact, autocomplete: "on", class:"form-control" %>
  </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-4">
    <%= f.label :province_id ,"Province"%><br />
    <%= f.collection_select :province_id, Province.order(:name), :id, :name, :prompt => "Please Select", class:"form-control"%>
  </div>

          <div class="col-md-2"></div>

          <div class="form-group col-md-4">
    <%= f.label :district_id, "District" %><br />
    <%= f.grouped_collection_select :district_id, Province.order(:name), :districts, :name, :id, :district_name, include_blank: true, class:"form-control" %>
  </div>
        </div>


        <div class="form-row">
          <div class="form-group col-md-4">
    <%= f.label :address_line_1, "Address Line 1" %><br />
    <%= f.text_field :address_line_1, autocomplete: "on" %>
  </div>
        </div>

  <div class="actions">
    <%= f.submit "Account Update", class:"btn btn-success" %>
  </div>
      </div>
<% end %>
  </div>
</div>
</div>

<br><div class="row">
  <div class="col-md-2"></div>
  <div class="col-xl-4">
<%= link_to "Back", :back, class:"btn btn-outline-success" %>
  </div>
</div>