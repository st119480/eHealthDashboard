<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
  <h1>Tests</h1>
  <% if user_signed_in? && (current_user.role_id == 1 || current_user.role_id == 2) %>
    <%= link_to 'Add New Test', new_patient_test_path %>
  <% end %>

  <table class="table">
    <div class="nav-item active">
    <thead>
    <tr>
      <th>Test #</th>
      <th>Prev diagnosis</th>
      <th>Prev medication</th>
      <th>Ongoing medication</th>
      <th>Pulse rate</th>
      <th>Body temperature</th>
      <th>Respiratory rate</th>
      <th>Bp systolic</th>
      <th>Bp diastolic</th>
      <th>Blood oxygen saturation</th>
      <th>Blood sugar pp</th>
      <th>Blood sugar fasting</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Bmi</th>
      <th>Test date</th>
      <th>Recommendation</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.id %></td>
        <td><%= test.prev_diagnosis %></td>
        <td><%= test.prev_medication %></td>
        <td><%= test.ongoing_medication %></td>
        <td><%= test.pulse_rate %></td>
        <td><%= test.body_temperature %></td>
        <td><%= test.respiratory_rate %></td>
        <td><%= test.bp_systolic %></td>
        <td><%= test.bp_diastolic %></td>
        <td><%= test.blood_oxygen_saturation %></td>
        <td><%= test.blood_sugar_pp %></td>
        <td><%= test.blood_sugar_fasting %></td>
        <td><%= test.height %></td>
        <td><%= test.weight %></td>
        <td><%= test.bmi %></td>
        <td><%= test.test_date %></td>
        <td><%= test.recommendation %></td>
        <% if user_signed_in? && (current_user.role_id == 1 || current_user.role_id == 2) %>
          <td><%= link_to 'Edit', edit_patient_test_path(test.patient, test) %></td>
          <td><%= link_to 'Delete', [test.patient, test], method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
    </div>
  </table>

  <br>


  <%= link_to "Back", :back %>
<% end %>