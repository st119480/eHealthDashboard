<h1 style="text-align:center">Edit User</h1><br>
<div class="container">
  <div class="border-dark card">
    <div style="height: 700px;">
    <%= form_for (@user) do |f| %>
        <div class="container">
          <div class="form-row">
            <div class="form-group col-md-4">
              <%= f.label :first_name , "First Name" %><br />
              <%= f.text_field :first_name, autocomplete: "on" %>
            </div>

            <div class="col-md-2"></div>

            <div class="form-group col-md-4">
              <%= f.label :last_name, "Last Name" %><br />
              <%= f.text_field :last_name, autocomplete: "on" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-4">
              <%= f.label :email, "Email" %><br />
              <%= f.email_field :email, autofocus: true %>
            </div>

            <div class="col-md-2"></div>

            <div class="form-group col-md-4">
              <%= f.label :username, "Username" %><br />
              <%= f.text_field :username, autocomplete: "on" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-4">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off" %>
          </div>

            <div class="col-md-2"></div>

            <div class="form-group col-md-4">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-4">
              <%= f.label :role_id, "Role" %>
              <%= f.select :role_id, options_for_select(Role.all.map {|p| [ p.description, p.id ]}, "Select Role"),:prompt => "Select Role",:required => true  %>
            </div>


            <div class="col-md-2"></div>

            <div class="form-group col-md-4">
              <%= f.label :gender, "Gender" %>
              <%= f.select :gender, ['Please Select', 'Male', 'Female', 'Others'],
                 :selected => 'Select One' %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-4">
              <%= f.label :Date_of_Birth, "Date Of Birth" %><br />
              <%= f.date_field :dob %>
            </div>

            <div class="col-md-2"></div>

            <div class="form-group col-md-4">
              <%= f.label :contact, "Contact Number" %><br />
              <%= f.text_field :contact, autocomplete: "on" %>
            </div>

            <div class="form-row">
              <div class="form-group col-md-4">
                <%= f.label :province_id ,"Province"%><br />
                <%= f.collection_select :province_id, Province.order(:name), :id, :name, :prompt => "Please Select"%>
              </div>

              <div class="col-md-2"></div>

              <div class="form-group col-md-4">
                <%= f.label :district_id, "District" %><br />
                <%= f.grouped_collection_select :district_id, Province.order(:name), :districts, :name, :id, :district_name, include_blank: true %>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-4">
                <%= f.label :address_line_1, "Address Line 1" %><br />
                <%= f.text_field :address_line_1, autocomplete: "on" %>
              </div>
            </div>

            <div class="actions">
              <%= f.submit "Update", class:"btn btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

  <%= link_to "Back", :back, class:"btn btn-outline-success" %>
